{% include '@crud/fieldLabel.twig' with {
    field: field,
    definition: crudData.getDefinition(),
    annotations: annotations
} only %}
<select class="form-control" id="{{ field }}" name="{{ fieldNamePrefix ~ field }}">
    <option value=""></option>
    {% set values = crudData.getDefinition().getSetItems(field) %}
    {% for setValue in values %}
        <option value="{{ setValue }}" {% if value and setValue == value %}selected="selected" {% endif %}>{{ setValue }}</option>
    {% endfor %}
</select>
